@{
    ViewData["Title"] = "Home";
}

<div class="centerText">
    <h1 class="marginFive">@Bot.botClient.CurrentUser.Username</h1>
    <p class="marginFive">@Bot.botClient.CurrentUser.Username is a ranking Discord bot for one server powered by .NET 5, ASP.NET Core, and DSharpPlus. Personalized for Microsoft Community.</p>
    <a href=@("https://discord.com/api/oauth2/authorize?client_id=" + Bot.botClient.CurrentUser.Id + "&permissions=268437504&scope=bot%20applications.commands") target="_blank" class="button inviteButton marginFive">Invite</a>
    <a href="@Program.JSON.GitHub" target="_blank" class="button githubButton marginFive">GitHub</a>
</div>
